<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>io.cucumber</groupId>
		<artifactId>cucumber-jvm</artifactId>
		<version>4.2.1-SNAPSHOT</version>
		<relativePath>../pom_swtbot.xml</relativePath>
	</parent>

	<artifactId>io.cucumber.core.eclipse</artifactId>
	<packaging>bundle</packaging>
	<name>Cucumber-JVM: Core-Eclipse fragment</name>


	<properties>
		<skip.assembly>false</skip.assembly>
	</properties>

	<dependencies>
		<dependency>
			<groupId>io.cucumber</groupId>
			<artifactId>io.cucumber.core</artifactId>
			<version>${cucumber.version}</version>
		</dependency>

		<dependency>
			<groupId>org.eclipse.platform</groupId>
			<artifactId>org.eclipse.osgi</artifactId>
			<version>3.13.100</version>
		</dependency>
		<!-- <dependency> <groupId>org.eclipse.core</groupId> <artifactId>org.eclipse.core.runtime</artifactId> 
			<version>3.7.0</version> </dependency> -->
	</dependencies>

	<build>
		<sourceDirectory>${basedir}/src/main/java</sourceDirectory>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<configuration>
					<archive>
						<manifest>
							<mainClass>cucumber.api.cli.Main</mainClass>
						</manifest>
					</archive>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>${maven.surefire.version}</version>
				<configuration>
					<skipTests>${skip.tests}</skipTests>
					<argLine>-Duser.language=en</argLine>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<version>${maven.bundle.version}</version>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Fragment-Host>io.cucumber.core;bundle-version="4.2.1"</Fragment-Host>
						<Bundle-Vendor>Avenqo GmbH, Germany</Bundle-Vendor>
						<Bundle-ClassPath>patch.jar,.</Bundle-ClassPath>
						<Bundle-SymbolicName>io.cucumber.core.eclipse;singleton:=true</Bundle-SymbolicName>
						<Automatic-Module-Name>cucumber-core-eclipse</Automatic-Module-Name>
						<Bundle-RequiredExecutionEnvironment>JavaSE-1.8</Bundle-RequiredExecutionEnvironment>
						<Eclipse-PatchFragment>true</Eclipse-PatchFragment>
						<!-- <Export-Package>cucumber.runtime.*,cucumber.runner.*,cucumber.api.*,io.cucumber.*,cucumber.api.formatter.*</Export-Package> 
							<Import-Package>cucumber.runtime.*,cucumber.runner.*,cucumber.api.*,io.cucumber.*,gherkin.*,org.*,io.cucumber.cucumberexpressions.*</Import-Package> -->
					</instructions>
				</configuration>
			</plugin>

		</plugins>
	</build>
</project>
